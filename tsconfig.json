{
    "complierOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "declaration": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}